{
  /****************
   * Builtins
   ****************/
  // workbench
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.statusBar.feedback.visible": false,
  "workbench.startupEditor": "none",
  // editor
  "editor.tabSize": 2,
  "editor.multiCursorModifier": "alt",
  "editor.fontSize": 16,
  "editor.fontFamily": "'Monaco', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "editor.detectIndentation": true,
  "editor.snippetSuggestions": "top",
  // terminal
  "terminal.integrated.fontFamily": "'Monaco', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.shell.linux": "/bin/zsh",
  // excluding files
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.sass-cache": true
  },
  // builtin misc
  "window.zoomLevel": 0,
  "explorer.confirmDragAndDrop": false,
  "breadcrumbs.enabled": true,
  "git.autofetch": true,
  /****************
   * Extensions
   ****************/
  // vim
  "vim.surround": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": " ",
  // "vim.enableNeovim": true,
  // "vim.neovimPath": "/usr/bin/nvim",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "g",
        "b"
      ],
      "commands": [
        "editor.action.insertCursorBelow"
      ]
    },
    {
      "before": [
        "g",
        "n"
      ],
      "commands": [
        "editor.action.addSelectionToNextFindMatch"
      ]
    },
    {
      "before": [
        "<leader>",
        "r",
        "r"
      ],
      "after": [
        "c",
        "i",
        "w",
        "<C-r>",
        "0",
        "<Esc>",
        "b"
      ]
    },
    {
      "before": [
        "<leader>",
        "c"
      ], // copy whole file
      "commands": [
        {
          "command": ":% y +"
        }
      ]
    },
    {
      "before": [
        "g",
        "g"
      ],
      "commands": [
        {
          "command": ":1"
        }
      ]
    },
    {
      "before": [
        "<leader>",
        "s",
      ],
      "commands": [
        {
          "command": ":w"
        }
      ]
    }
  ],
  "vim.handleKeys": {
    "<C-a>": false, // select all
    "<C-b>": false, // hide sidebar
    "<C-f>": false, // find
    "<C-k>": false // shortcut prefix
  },
  // sync
  "sync.gist": "0ad8b57b1308b6903822754295c25040",
  "sync.autoDownload": false,
  "sync.autoUpload": true,
  "sync.forceDownload": false,
  "sync.quietSync": false,
  "sync.askGistName": false,
  "sync.removeExtensions": true,
  "sync.syncExtensions": true,
  // gitlens
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  "gitlens.views.search.files.layout": "list",
  "gitlens.views.repositories.files.layout": "tree",
  // prettier
  "prettier.singleQuote": true,
  "markdown.extension.italic.indicator": "*",
  "prettier.disableLanguages": [
    "markdown"
  ],
  /****************
   * Language Specific
   ****************/
  // markdown
  "[markdown]": {
    "editor.quickSuggestions": true
  },
  "markdown.extension.toc.levels": "2..6",
  // javascript/typescript
  "[javascript]": {
    "editor.quickSuggestions": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.validate.enable": false,
  "javascript.validate.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "eslint.packageManager": "yarn",
  "jest.pathToJest": "",
  "jest.debugMode": true,
  "flow.pathToFlow": "",
  "workbench.colorTheme": "CFML Dark",
  "atlascode.jira.workingSite": {
    "baseUrlSuffix": "atlassian.net"
  },
  "atlascode.jira.explorer.enabled": false,
  "atlascode.jira.hover.enabled": false,
  "atlascode.jira.todoIssues.enabled": false,
  "atlascode.jira.statusbar.enabled": false,
  "atlascode.bitbucket.issues.explorerEnabled": false,
  "atlascode.bitbucket.issues.monitorEnabled": false,
  "javascript.suggest.autoImports": false,
  "yaml.format.singleQuote": true,
  "sync.forceUpload": true,
  "yaml.schemas": {
    "file:///home/gary/.vscode/extensions/atlassian.atlascode-2.4.11/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
  },
  "search.showLineNumbers": true,
  "files.associations": {
    ".cflintrc": "json",
    "*.snippet": "NGINX"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "terminal.integrated.allowChords": false,
  "cSpell.userWords": [
    "cdn",
    "maxage",
    "preflighted",
    "tmux"
  ],
  "cSpell.allowCompoundWords": true,
  "cSpell.enableFiletypes": [
    "!asciidoc",
    "!c",
    "!cpp",
    "!csharp",
    "!css",
    "!git-commit",
    "!go",
    "!handlebars",
    "!haskell",
    "!jade",
    "!java",
    "!javascript",
    "!javascriptreact",
    "!js",
    "!json",
    "!jsonc",
    "!jsx",
    "!less",
    "!php",
    "!pug",
    "!python",
    "!rust",
    "!scala",
    "!scss",
    "!typescript",
    "!typescriptreact",
    "!yaml",
    "!yml"
  ],
  "liveshare.featureSet": "insiders",
  "markdown.extension.preview.autoShowPreviewToSide": true,
  "editor.formatOnPaste": true,
  "eslint.format.enable": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "workbench.editorAssociations": [
    {
      "viewType": "default",
      "filenamePattern": "*.html"
    }
  ],
  "editor.formatOnSave": true
}